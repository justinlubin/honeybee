{
    "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
    "files": {
        "includes": ["**", "!**/pkg/**"]
    },
    "assist": {
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 80
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "useTemplate": "off",
                "noUselessElse": "off"
            }
        }
    }
}
